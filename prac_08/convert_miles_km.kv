BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_label
            text: '1'
            font_size: 48
            multiline: False
            on_text: app.handle_convert(input_label.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_label.text,1)
                # the following line specifies the function in the app class to call when the button is pressed
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_label.text,-1)

